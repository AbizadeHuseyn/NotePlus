<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/default_10">

    <EditText
        android:id="@+id/edit_text_detailed_note_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/black"
        tools:text="Heading"

        />

    <TextView
        android:id="@+id/text_view_detailed_note_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="@id/edit_text_detailed_note_heading"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@id/edit_text_detailed_note_heading"
        app:layout_constraintTop_toBottomOf="@id/edit_text_detailed_note_heading"
        tools:text="20.07.2020" />

    <EditText
        android:id="@+id/edit_text_detailed_note_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_detailed_note_date"
        android:hint="take a note..."
        android:textColorHint="@color/light_grey"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>